{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "start": "yarn build && npm-run-all --parallel watch:build watch:server",
    "clean": "rm -rf dist",
    "build": "yarn clean && webpack",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon ./dist/main.js --watch './dist'"
  },
  "dependencies": {
    "koa": "^2.14.1",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/preset-typescript": "^7.21.0",
    "@types/koa": "^2.13.5",
    "@types/koa-static": "^4.0.2",
    "babel-loader": "^9.1.2",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1"
  }
}
